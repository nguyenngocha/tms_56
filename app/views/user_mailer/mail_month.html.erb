<h1><%= @supervisor.name %></h1>
<div class="container">
  <h2><%= t "mail.course", content: @course.content %></h2><hr/>
  <%= @course.user_courses.each do |user_course| %>
    <div class="row">
      <div class="col-md-6">
        <h3>
          <%= t "mail.user" %>
          <%= link_to user_course.user.name,
            user_path(user_course.user) %>
        </h3>
        <div class="panel panel-default">
          <div class="panel-heading text-center">
            <h3><%= t "courses.subjects" %></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <% user_course.trainee_subjects.each do |trainee_subject| %>
                  <div class="row">
                    <div class="col-md-7 col-md-offset-1">
                      <h4>
                        <%= t "mail.subject "%>
                        <%= link_to trainee_subject.subject.content,
                          trainee_subject_path(trainee_subject) %>
                      </h4>
                      <p><%= t "mail.description",
                        content: trainee_subject.subject.description %></p>
                      <%= t "mail.status" %>
                      <%= render "shared/status_label",
                        label: trainee_subject.status %>
                    </div>
                    <div class="col-md-4">
                      <br>
                      <%= link_to t("user_courses.view_subject"),
                        trainee_subject_path(trainee_subject),
                          class: "btn btn-primary" %>
                    </div>
                  </div>
                  <hr>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
